{
  "name": "anjodato",
  "version": "0.0.0",
  "private": true,
  "repository": "hongaar:anjodato",
  "license": "MIT",
  "author": "Joram van den Boezem <joram@vandenboezem.nl>",
  "workspaces": [
    "web",
    "functions"
  ],
  "proxy": "http://localhost:5000",
  "scripts": {
    "start": "run-p \"start:**\"",
    "start:web": "yarn workspace @anjodato/web run start",
    "start:emulator": "firebase emulators:start",
    "build": "yarn workspaces foreach --topological --verbose run build",
    "build:watch": "yarn workspaces foreach --parallel --interlaced run build:watch",
    "format": "prettier --write --ignore-unknown .",
    "format:check": "prettier --check --ignore-unknown .",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@types/prettier": "^3.0.0",
    "firebase-tools": "12.5.4",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "moker": "1.4.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.3"
  },
  "packageManager": "yarn@3.6.3",
  "moker": {
    "plugins": [
      "typescript",
      "prettier",
      "lint-staged",
      "husky",
      "github-actions",
      "dependabot"
    ],
    "scoped": true
  }
}
